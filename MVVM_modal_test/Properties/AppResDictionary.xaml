<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SkyCloudStorage.ViewModel">
    
    <SolidColorBrush x:Key="IconColor" Color="#E0E0E0"/>

    <SolidColorBrush x:Key="GrayMenu_01" Color="#FF323232"/>

    <SolidColorBrush x:Key="RectangleGrayMain" Color="#FF252525"/>

    <Style x:Key="RectangleStyleMain" TargetType="{x:Type Rectangle}"/>

    <Style TargetType="Rectangle"  x:Key="RectangleMainStyle">
        <Setter Property="RadiusX" Value="0"/>
        <Setter Property="RadiusY" Value="0"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Stroke" Value="{StaticResource RectangleGrayMain}"/>
        <Setter Property="Fill" Value="{DynamicResource GrayMenu_01}"/>
    </Style>

    <Style TargetType="Grid" x:Key="TostInfoStyle">
        <Setter Property="Background" Value="#00367ACB"/>
        <Setter Property="Height" Value="70"/>
    </Style>

    <DropShadowEffect x:Key="Effect_Shadow" BlurRadius="16" Direction="277" ShadowDepth="4" Opacity="0.8"/>

</ResourceDictionary>